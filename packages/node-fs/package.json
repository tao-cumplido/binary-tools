{
	"name": "@binary-tools/node-fs",
	"version": "0.11.0-alpha.2",
	"description": "Supercharged data view for files of arbitrary size",
	"keywords": [
		"binary",
		"hex",
		"data",
		"view",
		"dataview",
		"javascript",
		"typescript",
		"node",
		"fs"
	],
	"license": "ISC",
	"author": "Tao Cumplido",
	"repository": "https://github.com/tao-cumplido/binary-tools/tree/main/packages/core",
	"bugs": "https://github.com/tao-cumplido/binary-tools/issues",
	"type": "module",
	"exports": {
		".": "./dist/binary-file.js"
	},
	"scripts": {
		"prepublishOnly": "wireit",
		"build": "wireit",
		"postbuild": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"prepublishOnly": {
			"dependencies": [
				"test",
				"build"
			]
		},
		"build": {
			"command": "tsc",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.ts",
				"!src/**/*.test.ts",
				"tsconfig.json"
			],
			"output": [
				"dist"
			]
		},
		"postbuild": {
			"command": "attw --profile esm-only --pack .",
			"files": [
				"dist/**",
				"package.json"
			],
			"output": []
		},
		"test": {
			"command": "node --test-reporter spec --test 'src/**/*.test.ts'",
			"files": [
				"src/**/*.test.ts",
				"tsconfig.test.json"
			]
		}
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {
		"@binary-tools/core": "workspace:~"
	},
	"devDependencies": {
		"@shigen/test": "0.3.0"
	}
}
